server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /var/lib/promtail/positions.yaml

clients:
  - url: "http://{{ loki_target | default('localhost') }}:3100/loki/api/v1/push"

scrape_configs:
  - job_name: apache-logs
    static_configs:
      - targets: ['localhost']
        labels:
          job: apache
          __path__: "{{ apache_log_path }}/**/*.log"

    pipeline_stages:
      - regex:
          expression: '^(?P<remote>[^ ]*) - (?P<user>[^ ]*) \[(?P<time>[^\]]+)\] "(?P<method>[A-Z]+) (?P<path>[^ ]+) (?P<protocol>[^"]+)" (?P<status>[0-9]{3}) (?P<size>[^ ]+) "(?P<referer>[^"]*)" "(?P<agent>[^"]*)"'
      - timestamp:
          source: time
          format: "02/Jan/2006:15:04:05 -0700"
      - labels:
          remote:
          status:
          method:
          path:
      - output:
          source: path

